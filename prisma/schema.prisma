model Chatroom {
  id Int @default(autoincrement()) @id
  name String
  owner User @relation(name: "owner", fields: [ownerId], references: [id])
  ownerId Int
  messages Message[]
  users User[]
}

model User {
  id Int @default(autoincrement()) @id
  userId String @unique
  name String?
  email String @unique
  avatar String?
  active Boolean @default(false)
  messages Message[]
  chatrooms Chatroom[]
}

model Message {
  id Int @default(autoincrement()) @id
  message String
  timestamp DateTime
  sender User @relation(fields: [senderId], references: [id])
  senderId Int
}
